<script>
  window.getVal = function(id) {
    var el = document.getElementById(id);
    if (!el) return 0;
    var val = parseFloat(el.value.replace(/\./g, '').replace(',', '.'));
    return isNaN(val) ? 0 : val;
  };

  window.calcFleetWise = function() {
    var qty = window.getVal('g_qty');
    var years = window.getVal('g_years') || 4;

    for (var i = 1; i <= 3; i++) {
      var price = window.getVal('price_'+i);
      var opex = window.getVal('maint_'+i) + window.getVal('iuc_'+i);
      
      var mensalUnit = (price / (years * 12)) + (opex / 12);
      var totalMensalFrota = mensalUnit * qty;
      
      document.getElementById('out_tco_mes_'+i).innerText = totalMensalFrota.toLocaleString('pt-PT', { style: 'currency', currency: 'EUR' });
      
      if (i > 1) {
        var base = (window.getVal('price_1') / (years * 12)) + ((window.getVal('maint_1') + window.getVal('iuc_1')) / 12);
        var poupanca = (base - mensalUnit) * qty;
        document.getElementById('out_sav_mes_'+i).innerText = poupanca.toLocaleString('pt-PT', { style: 'currency', currency: 'EUR' });
      }
    }
  };

  window.onload = window.calcFleetWise;
</script>
